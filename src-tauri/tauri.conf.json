{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nemo",
  "version": "1.0.0",
  "identifier": "com.nemo.medicalanalytics",
  "build": {
    "frontendDist": "out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Nemo - AI Medical Data Analytics",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "maximized": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "AI-powered medical data analysis platform",
    "longDescription": "Nemo is a desktop application for medical researchers and healthcare professionals to analyze datasets using natural language queries and local AI models. Built for privacy, security, and offline operation with comprehensive data analysis capabilities.",

    "copyright": "Copyright Â© 2025 Nemo Analytics. All rights reserved.",
    "licenseFile": "LICENSE",
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "dialog": {
      "all": true,
      "ask": true,
      "confirm": true,
      "message": true,
      "open": true,
      "save": true
    },
    "fs": {
      "all": true,
      "readFile": true,
      "writeFile": true,
      "readDir": true,
      "copyFile": true,
      "createDir": true,
      "removeDir": true,
      "removeFile": true,
      "renameFile": true,
      "exists": true
    },
    "shell": {
      "all": false,
      "execute": true,
      "sidecar": true,
      "open": false
    }
  }
}